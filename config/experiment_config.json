{
  "experiment_name": "OLB_Baseline_Comparison",
  "description": "Reproducible comparison of OLB vs baseline algorithms",
  "random_seed": 42,
  "environment": {
    "width": 3000,
    "height": 2000
  },
  "devices": {
    "num_sensors": 10,
    "num_fog_nodes": 6,
    "sensor_params": {
      "transmission_power_range": [0.1, 1.0],
      "flow_rate_range": [0.5, 2.0],
      "traffic_size_range": [0.1, 1.0],
      "flow_size_range": [100, 1000]
    },
    "fog_node_params": {
      "processing_power_range": [1000, 5000],
      "bandwidth_range": [10, 100],
      "carrier_frequency_range": [2.4, 5.0],
      "noise_power_range": [1e-12, 1e-10]
    }
  },
  "simulation": {
    "time": 1000,
    "workload_model": "steady",
    "algorithms": ["OLB", "Random", "Distance", "LoadBalanced"]
  },
  "metrics": {
    "primary": ["overall_latency", "communication_latency", "computing_latency"],
    "secondary": ["energy_consumption", "network_usage", "load_balance_score"],
    "output_format": ["json", "csv", "plots"]
  },
  "reproducibility": {
    "fixed_coordinates": true,
    "fixed_parameters": true,
    "multiple_runs": 3
  }
}
